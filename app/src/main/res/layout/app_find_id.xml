<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F9FB"
    android:padding="16dp">

    <!-- 상단 제목 -->
    <TextView
        android:id="@+id/find_id_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디 찾기"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#2A3D45"
        android:layout_marginBottom="16dp" />

    <!-- 이메일 입력 필드 -->
    <EditText
        android:id="@+id/email_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이메일 입력"
        android:padding="12dp"
        android:background="@android:color/white"
        android:textColor="#2A3D45"
        android:layout_marginBottom="16dp" />

    <!-- 인증 요청 버튼 -->
    <Button
        android:id="@+id/request_verification_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="인증 코드 요청"
        android:backgroundTint="#D0F4DE"
        android:textColor="#2A3D45"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- 인증 코드 입력 필드 -->
    <EditText
        android:id="@+id/verification_code_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="인증 코드 입력"
        android:padding="12dp"
        android:background="@android:color/white"
        android:textColor="#2A3D45"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/request_verification_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="인증 코드 확인"
        android:backgroundTint="#D0F4DE"
        android:textColor="#2A3D45"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- 아이디 찾기 버튼 -->
    <Button
        android:id="@+id/find_id_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="아이디 찾기"
        android:backgroundTint="#FDFFB6"
        android:textColor="#2A3D45"
        android:padding="12dp" />
</LinearLayout>
