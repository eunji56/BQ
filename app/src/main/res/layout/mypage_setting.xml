<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F9FB"
    android:padding="16dp">

    <!-- 상단 제목 -->
    <TextView
        android:id="@+id/settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설정"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#2A3D45"
        android:layout_marginBottom="16dp" />

    <!-- 아이디 찾기 -->
    <Button
        android:id="@+id/find_id_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="아이디 찾기"
        android:backgroundTint="#D0F4DE"
        android:textColor="#2A3D45"
        android:padding="12dp"
        android:layout_marginBottom="8dp" />

    <!-- 비밀번호 찾기/변경 -->
    <Button
        android:id="@+id/reset_password_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="비밀번호 찾기/변경"
        android:backgroundTint="#D0F4DE"
        android:textColor="#2A3D45"
        android:padding="12dp"
        android:layout_marginBottom="8dp" />

    <!-- 알람 푸시설정 -->
    <TextView
        android:id="@+id/notification_settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="알림 설정"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#2A3D45"
        android:layout_marginTop="16dp" />

    <Switch
        android:id="@+id/mission_reminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="미션 리마인더 알림"
        android:textColor="#2A3D45"
        android:layout_marginTop="8dp" />

    <Switch
        android:id="@+id/friend_activity_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="친구 활동 알림"
        android:textColor="#2A3D45"
        android:layout_marginTop="4dp" />

    <!-- 로그아웃 -->
    <Button
        android:id="@+id/logout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        android:backgroundTint="#FDFFB6"
        android:textColor="#2A3D45"
        android:padding="12dp"
        android:layout_marginTop="16dp" />

    <!-- 회원 탈퇴 -->
    <Button
        android:id="@+id/delete_account_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원 탈퇴"
        android:backgroundTint="#FDFFB6"
        android:textColor="#2A3D45"
        android:padding="12dp"
        android:layout_marginTop="8dp" />

    <!-- 하단 네비게이션 바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="240dp"
        android:background="#D0F4DE"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/ic_home"
            android:tint="#2A3D45" />

        <ImageButton
            android:id="@+id/nav_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/ic_group"
            android:tint="#2A3D45" />

        <ImageButton
            android:id="@+id/nav_alarm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/ic_alarm"
            android:tint="#2A3D45" />

        <ImageButton
            android:id="@+id/nav_mypage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/ic_mypage"
            android:tint="#2A3D45" />
    </LinearLayout>
</LinearLayout>
